# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=united_exchange

# JWT Configuration (Production-ready with refresh tokens)
# Access token - short-lived for security (default: 15 minutes)
JWT_ACCESS_SECRET=your-access-token-secret-min-32-chars-change-in-production
JWT_ACCESS_EXPIRES_IN=15m

# Refresh token - longer-lived, stored in database (default: 7 days)
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Legacy support (used as fallback if access secret not set)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (optional - defaults shown)
# RATE_LIMIT_MAX_ATTEMPTS=5
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_BLOCK_DURATION_MS=1800000
